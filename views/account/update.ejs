<%# Content Heading %>

<% if (title) { %>
<h1><%= title %></h1>
<% } else {
  res.redirect('/')
} %>

<%# Flash Message %>

<%- messages() %>

<%# Errors %>

<% if (errors) { %>
  <ul class="notice">
 <% errors.array().forEach(error => { %>
   <li><%= error.msg %></li>
<%  }) %>
 </ul>
<% } %>

<%# Update Account Information Form %>

<div id="edit-account">

<h2 class="password-update--title">Update Account Information</h2>

<form id="edit-account-form" class="form" action="/account/update-account" method="post">
    <label>First name</label>
    <input type="text" id="register-fname--input" class="input" name="account_firstname" required value="<%= locals.account_firstname %>">
    <label>Last name</label>
    <input type="text" id="register-lname--input" class="input" name="account_lastname" required value="<%= locals.account_lastname %>">
    <label>Email:</label>
    <input type="email" id="login-email--input" class="input" name="account_email" required value="<%= locals.account_email %>">
    <input type="hidden" name="original_email" value="<%= account_email %>">
    <button id="edit-button">Update Account</button>
    <input type="hidden" name="account_id"
    <% if(locals.account_id) { %> value="<%= locals.account_id %>" <% } %>>
</form>

<%# Update Password Form %>

<h2 class="password-update--title">Update Password</h2>

<form id="update-password-form" class="form" action="/account/update-password" method="post">
    <label>Password:</label>
    <p class="specs">(must contain a minimum of 12 characters, a capital letter, a number, and a special character)</p>
    <p class="specs">* original password will be changed.</p>
    <input type="password" id="update-password--input" class="input" name="account_password" required placeholder="Enter your new password" pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$">
    <button id="update__eye-toggle" type="button" title="Show Password"><img src="/images/icons/password-hide.png" alt="Show password" width="24" height="24"></button>
    <button id="update-button">Change Password</button>
    <input type="hidden" name="account_id"
    <% if(locals.account_id) { %> value="<%= locals.account_id %>" <% } %>>
</form>
</div>

<%# Show/Hide Password link %>

<script src="/js/script.js" defer></script>
